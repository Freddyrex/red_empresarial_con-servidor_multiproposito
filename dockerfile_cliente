FROM ubuntu:18.04

ENV DEBIAN_FRONTEND=noninteractive

# Instalar herramientas esenciales para cliente
RUN apt-get update && apt-get install -y \
    net-tools \
    iproute2 \
    iputils-ping \
    isc-dhcp-client \
    openssh-client \
    sshpass \
    ftp \
    lftp \
    mysql-client \
    curl \
    wget \
    nano \
    vim \
    htop \
    nmap \
    ufw \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Crear directorio y copiar clave de ubuntu_station
RUN mkdir -p /root/.ssh
COPY ubuntu_station_keys/id_rsa_station /root/.ssh/id_rsa
COPY ubuntu_station_keys/id_rsa_station.pub /root/.ssh/id_rsa.p>RUN chmod 600 /root/.ssh/id_rsa && chmod 644 /root/.ssh/id_rsa.>
# Copiar script de configuración automática
COPY setup.sh /root/setup.sh
RUN chmod +x /root/setup.sh

# Copiar menú de usuario novato
COPY menu_usuario.sh /root/menu_usuario.sh
RUN chmod +x /root/menu_usuario.sh

# Ejecutar el script de configuración automática al arrancar